<% content_for :title_bar do %>
  <h1 align="center">Ingreso al Sistema</h1>
<% end %>

<div class="form-wrapper" >
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <!-- Ingresa correo y clave para ingresar al sistema -->
  
  <div class="field-wrapper">
    <%= f.label :email %>
    <div class="field"><%= f.email_field :email %></div>
  </div>

  <div class="field-wrapper">
    <%= f.label :password %>
    <div class="field"><%= f.password_field :password %></div>
  </div>


  <!--<% if devise_mapping.rememberable? -%>
    <div class="field"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
  -->
  <div class="actions"><%= f.submit "Ingresar" %></div>
<% end %>
<%= render :partial => "devise/shared/links" %>
</div>
